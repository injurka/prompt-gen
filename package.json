{
  "name": "@injurkx/prompt-gen",
  "type": "module",
  "version": "1.0.0",
  "private": false,
  "packageManager": "bun@1.2.20",
  "description": "CLI tool to generate AI prompts from project files using ESM and Bun.",
  "author": "injurka",
  "license": "MIT",
  "homepage": "https://github.com/injurka/prompt-gen",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/injurka/prompt-gen.git"
  },
  "bugs": {
    "url": "https://github.com/injurka/prompt-gen/issues"
  },
  "keywords": [
    "prompt",
    "ai",
    "generator",
    "cli",
    "typescript",
    "esm",
    "bun"
  ],
  "exports": {
    ".": "./dist/cli.js"
  },
  "main": "./dist/cli.js",
  "types": "./dist/cli.d.ts",
  "bin": {
    "prompt-gen": "./bin/index.js"
  },
  "files": [
    "bin",
    "dist"
  ],
  "engines": {
    "bun": ">=1.2.0"
  },
  "scripts": {
    "build": "tsup --config ./build/tsup.config.ts",
    "dev": "bun run src/cli.ts --",
    "bin": "node bin/index.js",
    "start": "node dist/cli.js",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "prepack": "npm run build",
    "postinstall": "simple-git-hooks"
  },
  "dependencies": {
    "ansis": "^4.1.0",
    "commander": "^14.0.0",
    "cosmiconfig": "^9.0.0",
    "glob": "^11.0.3",
    "ignore": "^7.0.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.2.1",
    "@types/glob": "^9.0.0",
    "@types/node": "^24.2.1",
    "bun-types": "latest",
    "eslint": "^9.33.0",
    "eslint-plugin-format": "^1.0.1",
    "jiti": "^2.5.1",
    "simple-git-hooks": "^2.13.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "simple-git-hooks": {
    "pre-commit": "bunx lint-staged && bun run typecheck",
    "post-commit": "git status",
    "post-merge": "bun i"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
