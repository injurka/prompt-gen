{
  "name": "@injurkx/prompt-gen",
  "type": "module",
  "version": "0.0.1",
  "private": false,
  "packageManager": "bun@1.2.8",
  "description": "CLI tool to generate AI prompts from project files using ESM and Bun.",
  "author": "injurka",
  "license": "MIT",
  "homepage": "https://github.com/injurka/prompt-gen",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/injurka/prompt-gen.git"
  },
  "bugs": {
    "url": "https://github.com/injurka/prompt-gen/issues"
  },
  "keywords": [
    "prompt",
    "ai",
    "generator",
    "cli",
    "typescript",
    "esm",
    "bun"
  ],
  "exports": {
    ".": "./dist/cli.js"
  },
  "main": "./dist/cli.js",
  "types": "./dist/cli.d.ts",
  "bin": {
    "prompt-gen": "./bin/prompt-gen.js"
  },
  "files": [
    "bin",
    "dist"
  ],
  "engines": {
    "bun": ">=1.2.0"
  },
  "scripts": {
    "build": "tsup --config ./build/tsup.config.ts",
    "dev": "bun run src/cli.ts --",
    "start": "node dist/cli.js",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "prepack": "npm run build",
    "postinstall": "simple-git-hooks"
  },
  "dependencies": {
    "ansis": "^3.17.0",
    "commander": "^13.1.0",
    "glob": "^11.0.1",
    "ignore": "^7.0.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.11.0",
    "@types/glob": "^8.1.0",
    "@types/node": "^22.14.0",
    "bun-types": "latest",
    "eslint": "^9.24.0",
    "eslint-plugin-format": "^1.0.1",
    "jiti": "^2.4.2",
    "simple-git-hooks": "^2.12.1",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3"
  },
  "simple-git-hooks": {
    "pre-commit": "bunx lint-staged && bun run typecheck",
    "post-commit": "git status",
    "post-merge": "bun i"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
